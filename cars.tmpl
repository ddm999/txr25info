<body>
  <div class="wrapper">
    <header>
      <h1 id="title">TOKYO XTREME RACER (2025) INFO & DATA RESOURCE</h1>
      <h2>DETAILED CAR LIST</h1>
    </header>
    <hr/>
    #for $maker in $makers
      <section id="${maker['name'].lower().replace(' ','')}">
        <h3>${maker['name'].upper()}</h3>
        <span class="car-container">
        #for $car in $maker['cars']
          <a href="./cars/${car}.html">
            <p class="car">
              <span id="name">${car}</span>
              <img id="img" src="img/car/${cars[car]['image'].upper()}.png">
              #if $cars[car]['can_buy'] and $cars[car]['maker'] != "OtherCar"
              <span id="price">${cars[car]['fmtprice']} <span id="cp">CP</small></span>
              #else
              <span id="noprice">cannot be purchased</small></span>
              #end if
            </p>
          </a>
        #end for
        </span>
      </section>
      <hr/>
    #end for
